@code {

    [Inject]
    private IUnitOfWork UnitOfWork { get; init; }
    private Modal modal = default!;

    private Tafsir? tafsir;

    [Parameter] 
    public int Id { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> OnCopyCallbackClick { get; set; }


    protected async override Task OnInitializedAsync()
    {
        // get employee with {EmployeeId} from DB
        tafsir = await UnitOfWork.Tafsirs.GetByID(Id);
        CopyService.Value = tafsir?.Kemenag;
        await base.OnInitializedAsync();
    }

    public async Task OnShowModalClick()
    {
        await modal.ShowAsync();
    }
    private async Task OnHideModalClick()
    {
        await modal.HideAsync();
    }
}
