@page
@model MyQuranWeb.Pages.Prays.ListPrayModel
@{
    ViewData["Title"] = "Daftar Kumpulan Doa";
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div id="error" class="alert alert-danger text-danger">
        <span>@Model.ErrorMessage</span>
    </div>
}

<div class="card">
    <div class="card-header text-center">
        <p class="h2">@ViewData["Title"]</p>
    </div>
    <div class="card-body">
        <div class="form-group">
            <table class="table table-sm table-striped table-hover table-borderless">
                @for (int i = 0; i < Model.Prays.Count; i++)
                {
                    <tr>
                        @{
                            var pray = Model.Prays[i];
                            <td><a href="~/Prays/PrayDetail/@pray.ID" target="_blank" class="text-decoration-none text-dark">@($"{pray.Description}")</a></td>
                        }
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

