        var pageNumber = $("#searchHadithNumber").val();
        scrollToAyah(pageNumber);

        $("#btnSearch").click(function () {
            ayahID = $("#searchHadithNumber").val();
            scrollToAyah(pageNumber);
        });

        $('#txtSearch').on('keypress', function (e) {
            if (e.which === 13) {
                scrollToAyah(pageNumber);
            }
        });

        //$('.searchList').on('change', function () {
