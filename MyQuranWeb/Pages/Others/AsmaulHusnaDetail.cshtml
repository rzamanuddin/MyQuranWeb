        $('#searchPageNumber').on('change', function () {
            var origin = window.location.origin;
            window.location.replace(websiteUrl + "/Hadith/HadithDetail/" + $("#searchSlug").val() + "/" + $(this).val());
        });

        $('#searchHadithNumber').on('change', function () {
